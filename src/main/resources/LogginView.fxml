<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.edu.controller.LogginViewController">
    <children>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER" opacity="0.77" prefHeight="331.0" prefWidth="369.0" spacing="15.0" style="-fx-background-color: #f53630; -fx-background-radius: 20px;">
                <Label text="Ingresar" textFill="#f8f8f8" />
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/equilibriumLogin.png" />
                </ImageView>

            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="147.0" minWidth="10.0" prefWidth="141.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="235.0" minWidth="10.0" prefWidth="228.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                      <Label style="-fx-text-fill: white;" text="Usuario" />
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="30.0" prefWidth="226.0" GridPane.columnIndex="1">
                      <TextField fx:id="userField" prefHeight="26.0" prefWidth="179.0" promptText="Usuario" style="-fx-background-radius: 20px; -fx-background-color: #b62525; -fx-text-fill: white;" />
                  </HBox>
               </children>
            </GridPane>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.0" minWidth="10.0" prefWidth="87.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="222.0" minWidth="10.0" prefWidth="213.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                      <Label style="-fx-text-fill: white;" text="Contraseña" />
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                      <PasswordField fx:id="passwordField" prefHeight="26.0" prefWidth="179.0" promptText="Contraseña" style="-fx-background-radius: 20px; -fx-background-color: #b62525;" />
                  </HBox>
               </children>
            </GridPane>
                <HBox alignment="CENTER" spacing="10">
                    <Button onAction="#handleLoginButton" style="-fx-background-radius: 20px; -fx-background-color: #b62525; -fx-text-fill: white;" text="Ingresar" />
                    <Button onAction="#handleAddUserButton" style="-fx-background-radius: 20px; -fx-background-color: #b62525; -fx-text-fill: white;" text="Registrarse" />
                </HBox>

            </VBox>
        </HBox>


    </children>

</VBox>
