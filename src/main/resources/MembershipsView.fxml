<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="600.0" stylesheets="@VBox.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.edu.controller.MembershipsViewController">
    <children>
      <GridPane VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
                <Label text="Miembro"/>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1" alignment="CENTER" >
                <Label text="Escolaridad"/>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" alignment="CENTER">
               <children>
                  <TextField fx:id="memberCodeField" promptText="Cédula" prefHeight="26.0" prefWidth="262.0"/>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER">
               <children>
                  <ComboBox fx:id="scholarshipComboBox" promptText="Elige la escolaridad" prefHeight="26.0" prefWidth="262.0"/>
               </children>
            </HBox>
         </children>
      </GridPane>
        
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="600.0" spacing="10" VBox.vgrow="ALWAYS">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAddButton" text="Agregar" />
                <Button mnemonicParsing="false" onAction="#handleSearchButton" text="Buscar" />
                <Button mnemonicParsing="false" onAction="#handleUpdateButton" text="Actualizar" />
                <Button mnemonicParsing="false" onAction="#handleCleanButton" text="Limpiar" />

            </children></HBox>
        <TableView fx:id="membershipTableView" prefHeight="257.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="codeMembershipColumn" prefWidth="75.0" text="Código" />
                <TableColumn fx:id="nameSecretaryColumn" prefWidth="75.0" text="Secretaria" />
                <TableColumn fx:id="codeMemberColumn" prefWidth="75.0" text="Miembro" />
                <TableColumn fx:id="scholarshipColumn" prefWidth="75.0" text="Escolaridad" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
